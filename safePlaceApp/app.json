{
  "expo": {
    "name": "safePlaceApp",
    "slug": "safePlaceApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/images/app-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./app/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bandleIdentifier": "com.mobilesystems.firebase",
      "googleServicesFile": "./firebaseConfig/GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mobilesystems.firebase",
      "googleServicesFile": "./firebaseConfig/google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./app/assets/images/app-icon.png"
    },
    "plugins": [
      "expo-router",
      ["expo-build-properties", { "ios": { "useFrameworks": "static" } }],
      "@react-native-firebase/app",
      "@react-native-firebase/auth"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
